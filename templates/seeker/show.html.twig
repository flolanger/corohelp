{% extends 'base.html.twig' %}

{% block body %}
    <a class="uk-margin-top" href="{{ app.request.headers.get('referer') }}" uk-icon="icon: arrow-left; ratio: 2.5"></a>
    <article class="uk-margin-top uk-article">
        <h1 class="uk-article-title"><a class="uk-link-reset" href="">{{ seeker.title }}</a></h1>
        <p class="uk-article-meta">{% trans %}posts.writtenBy{% endtrans %} <a href="#">{{ seeker.user.name }}</a>
            {% trans %}posts.on{% endtrans %} {{ seeker.creationDate|date("d.m.Y") }}</p>
        <p>{{ seeker.description }}</p>
        <div class="uk-section">
            <div class="uk-container">
                <h3>{% trans %}posts.contact{% endtrans %}</h3>
                <a href="mailto:{{ seeker.user.email }}" uk-icon="icon: mail"></a><a href="mailto:{{ seeker.user.email }}" class="uk-margin-small-left">{{ seeker.user.email }}</a>
                {% if seeker.user.phoneNumber %}
                    <div class="uk-margin-small-top"></div>
                    <a href="tel:{{ seeker.user.phoneNumber }}" uk-icon="icon: receiver"></a>
                    <a href="tel:{{ seeker.user.phoneNumber }}" class="uk-margin-small-left">{{ seeker.user.phoneNumber }}</a>
                {% endif %}
            </div>
            <div>
                <div class="uk-float-right">
                    {{ include('seeker/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </article>
{% endblock %}
