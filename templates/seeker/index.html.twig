{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="uk-margin-top">{% trans %}posts.seeker{% endtrans %}</h1>
    <div class="uk-grid-match uk-child-width-expand@m uk-grid-medium" uk-grid>
        {% for seeker in seekers %}
            <div>
                <div class="uk-card uk-card-default uk-width-1-1@l uk-card-hover">
                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle" uk-grid>
                            <div class="uk-width-auto">
                                <span uk-icon="icon: user"></span>
                            </div>
                            <div class="uk-width-expand">
                                <h3 class="uk-card-title uk-margin-remove-bottom">{{ seeker.title }}</h3>
                                <p class="uk-text-meta uk-margin-remove-top">
                                    <time>{{ seeker.creationDate|date("d.m.Y") }}</time>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="uk-card-body">
                        <p>{{ seeker.description|length < 200 ? seeker.description : seeker.description|slice(0, 200) ~ ' ...' }}</p>
                        <div class="uk-align-right">
                            <a href="mailto:{{ seeker.user.email }}" uk-icon="icon: mail"></a><a href="mailto:{{ seeker.user.email }}" class="uk-margin-small-left">{{ seeker.user.email }}</a>
                            {% if seeker.user.phoneNumber %}
                                <div class="uk-margin-small-top"></div>
                                <a href="tel:{{ seeker.user.phoneNumber }}" uk-icon="icon: receiver"></a>
                                <a href="tel:{{ seeker.user.phoneNumber }}" class="uk-margin-small-left">{{ seeker.user.phoneNumber }}</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="uk-card-footer">
                        <a href="{{ path('seeker_show', {'id': seeker.id}) }}" class="uk-button uk-button-text">{% trans %}posts.readMore{% endtrans %}</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>{% trans %}posts.noPosts{% endtrans %}</p>
        {% endfor %}
    </div>
{% endblock %}
