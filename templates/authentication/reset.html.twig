{% extends 'base.html.twig' %}

{% block body %}
    <div class="uk-section uk-flex uk-flex-middle" uk-height-viewport>
        <div class="uk-width-1-1">
            <div class="uk-container">
                <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
                    <div class="uk-width-1-1@m">
                        <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
                            {% if not emailSent %}
                                <h3 class="uk-card-title uk-text-center">Reset password</h3>
                                {{ form_start(resetForm) }}
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                        {{ form_widget(resetForm.email, {'attr': {'class': 'uk-input uk-form-large', 'autofocus': ''}}) }}
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <button class="uk-button uk-button-primary uk-button-large uk-width-1-1"
                                            type="submit">
                                        Reset
                                    </button>
                                </div>
                                {{ form_end(resetForm) }}
                                {% else %}
                                    <h3 class="uk-card-title uk-text-center">Email has been sent</h3>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
