{% extends 'base.html.twig' %}

{% block title %}Login - Corohelp{% endblock %}

{% block body %}
    <div class="uk-section uk-flex uk-flex-middle" uk-height-viewport>
        <div class="uk-width-1-1">
            <div class="uk-container">
                <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
                    <div class="uk-width-1-1@m">
                        <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
                            {% if app.user %}
                                <div class="mb-3">
                                    <h3 class="uk-card-title uk-text-center">{% trans %}authentication.loggedin{% endtrans %}</h3>
                                    <p class="uk-text-center">{% trans with {'username': app.user.username, 'url': '/logout'} %}authentication.loggedinMessage{% endtrans %}</p>
                                </div>
                            {% else %}
                                <h3 class="uk-card-title uk-text-center">{% trans %}authentication.header{% endtrans %}</h3>
                                {{ form_start(loginForm) }}
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                        {{ form_widget(loginForm.email, {'attr': {'value': last_username, 'class': 'uk-input uk-form-large', 'autofocus': ''}}) }}
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                        {{ form_widget(loginForm.password, {'attr': {'value': last_username, 'class': 'uk-input uk-form-large'}}) }}
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        {{ form_widget(loginForm._csrf_token, {'attr': {'value': csrf_token('authenticate')}}) }}
                                        <label>
                                            {{ form_widget(loginForm._remember_me, {'attr': {'class': 'uk-checkbox'}}) }}
                                            {% trans %}authentication.rememberMe{% endtrans %}
                                        </label>
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <button class="uk-button uk-button-primary uk-button-large uk-width-1-1"
                                            type="submit">
                                        {% trans %}authentication.login{% endtrans %}
                                    </button>
                                </div>
                                <div class="uk-text-small uk-text-center">
                                    {% trans %}authentication.noAccountQuestion{% endtrans %} <a
                                            href="{{ path('register') }}">{% trans %}authentication.createAccount{% endtrans %}</a>
                                </div>
                                {{ form_end(loginForm) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
