{% extends 'base.html.twig' %}

{% block body %}
    <div class="uk-section uk-flex uk-flex-middle" uk-height-viewport>
        <div class="uk-width-1-1">
            <div class="uk-container">
                <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
                    <div class="uk-width-1-1@m">
                        <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
                            {% if app.user %}
                                <div class="mb-3">
                                    <h3 class="uk-card-title uk-text-center">{% trans %}authentication.loggedin{% endtrans %}</h3>
                                    <p class="uk-text-center">{% trans with {'username': app.user.username, 'url': '/logout'} %}authentication.loggedinMessage{% endtrans %}</p>
                                </div>
                            {% else %}
                                <h3 class="uk-card-title uk-text-center">{% trans %}register.header{% endtrans %}</h3>
                                {{ form_start(registrationForm) }}
                                {{ form_errors(registrationForm) }}
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                        {% set emailErrorClass = not registrationForm.email.vars.valid ? ' uk-form-danger' %}
                                        {{ form_widget(registrationForm.email, {'attr': {'class': 'uk-input uk-form-large' ~ emailErrorClass} }) }}
                                    </div>
                                    {% for error in registrationForm.email.vars.errors %}
                                        <span>{{ error.message }}</span>
                                    {% endfor %}
                                </div>
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                        {% set passwordEmailClass = not registrationForm.plainPassword.first.vars.valid ? ' uk-form-danger' %}
                                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'uk-input uk-form-large' ~ emailErrorClass} }) }}
                                    </div>
                                    {% for error in registrationForm.plainPassword.first.vars.errors %}
                                        <span>{{ error.message }}</span>
                                    {% endfor %}
                                </div>
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'uk-input uk-form-large'} }) }}
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                                        {{ form_widget(registrationForm.name, {'attr': {'class': 'uk-input uk-form-large', 'placeholder': 'register.name'} }) }}
                                    </div>
                                </div>
                                <div class="uk-margin">
                                    <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">{% trans %}register.createAccount{% endtrans %}</button>
                                </div>
                                {{ form_end(registrationForm) }}
                                <div class="uk-text-small uk-text-center">
                                    {% trans %}register.accountExists{% endtrans %}
                                    <a href="{{ path('login') }}"> {% trans %}register.login{% endtrans %}</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

